---
import "@fontsource/noto-serif-tc/400.css";
import "@fontsource/noto-serif-tc/700.css";

import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style lang="scss" is:global>
  :root {
    --text: 37 29 9; // #251d09
    --background: 252 249 243; // #fcf9f3
    --accent: 164 182 134; // #a4b686
    --primary: 223 191 109; // #dfbf6d
    --secondary: 237 230 212; // #ede6d4

    --smaller-text: 400 20px "Noto Serif TC", sans-serif;
    --main-text: 400 16px "Noto Serif TC", sans-serif;
    --main-bold: 700 16px "Noto Serif TC", sans-serif;
    --subtitle: 400 24px "Noto Serif TC", sans-serif;
    --subtitle-bold: 700 24px "Noto Serif TC", sans-serif;
    --navbar-title: 400 32px "Noto Serif TC", sans-serif;
    --section-title: 700 32px "Noto Serif TC", sans-serif;
    --page-title: 700 64px "Noto Serif TC", sans-serif;

    color: rgb(var(--text));
    background-color: rgb(var(--background));
    font: var(--main-text);
  }

  :root,
  body {
    padding: 0;
    margin: 0;
  }

  .btn-primary {
    background: rgb(var(--primary));
    border-radius: 16px;
    border: 0;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;

    color: rgb(var(--text));
    font: var(--main-text);
  }

  .btn-secondary {
    background: transparent;
    border: solid rgb(var(--primary)) 1px;
    border-radius: 16px;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;

    color: rgb(var(--text));
    font: var(--main-text);
  }
</style>
