---
import "@fontsource/noto-serif-tc";

import Navbar from "@/components/Navbar.astro";

export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
  </body>
</html>

<style lang="scss" is:global>
  :root {
    --text: #251d09;
    --background: #fcf9f3;
    --accent: #a4b686;
    --primary: #dfbf6d;
    --secondary: #ede6d4;

    --smaller-text: 400 20px "Noto Serif TC", sans-serif;
    --main-text: 400 16px "Noto Serif TC", sans-serif;
    --main-bold: 700 16px "Noto Serif TC", sans-serif;
    --subtitle: 400 24px "Noto Serif TC", sans-serif;
    --subtitle-bold: 700 24px "Noto Serif TC", sans-serif;
    --section-title: 400 32px "Noto Serif TC", sans-serif;
    --section-title-bold: 700 32px "Noto Serif TC", sans-serif;
    --page-title: 700 64px "Noto Serif TC", sans-serif;

    color: var(--text);
    background-color: var(--background);
    font: var(--main-text);
  }

  :root,
  body {
    padding: 0;
    margin: 0;
  }
</style>
